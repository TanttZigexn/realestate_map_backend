# Production Environment Variables
# Copy this file to .env.production and fill in the values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=rental_search_api
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=rental_search_api_production

# ============================================
# Rails Configuration
# ============================================
RAILS_ENV=production
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Rails settings
RAILS_MAX_THREADS=10
WEB_CONCURRENCY=2
RAILS_LOG_LEVEL=info
RAILS_FORCE_SSL=false

# ============================================
# Application Configuration
# ============================================
APP_HOST=your-domain.com
APP_PORT=3000
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-domain.com

# ============================================
# External Services
# ============================================
# Mapbox Geocoding API
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ============================================
# Nginx Configuration
# ============================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================
# Optional: Redis Configuration
# ============================================
# REDIS_URL=redis://:your_redis_password@redis:6379/0
# REDIS_PASSWORD=your_redis_password_here

# ============================================
# Optional: Email Configuration (SMTP)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_DOMAIN=your-domain.com

# ============================================
# Optional: Monitoring & Error Tracking
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# ============================================
# Optional: Storage (S3, etc.)
# ============================================
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

